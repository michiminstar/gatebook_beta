<div class="greeting">
  <h1>Gatebookへ<br>ようこそ!</h1>

  <%= image_tag("wanko.png", alt: "Gatebook wanko", id: "wanko") %>
</div>

<div class="signup-form">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "登録する", class: "signup-btn" %>
    <% end %>
</div>
